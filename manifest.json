{
  "manifest_version": 3,
  "name": "Spell Checker",
  "version": "1.0",
  "description": "Correct grammar and spelling anywhere using OpenAI.",
  "permissions": [
    "storage",
    "scripting"
    
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "domUtils.js", 
        "apiService.js", 
        "suggestionDropdown.js", 
        "spellChecker.js", 
        "observer.js", 
        "contentScript.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon.png", "config.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
